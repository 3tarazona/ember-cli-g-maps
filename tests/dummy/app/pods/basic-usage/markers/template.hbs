<div class="grid-content -np -mb">
  {{#g-map
    class="gmaps-docs-map"
    lat=lat
    lng=lng
    zoom=zoom
    draggable=false
    disableDoubleClickZoom=true
    streetViewControl=false
    mapTypeControl=false
    scrollwheel=false
    zoomControl=false as |map|}}

    {{g-map-marker map
      lat=options.lat
      lng=options.lng
      animation=options.animation
      clickable=options.clickable
      crossOnDrag=options.crossOnDrag
      cursor=options.cursor
      draggable=options.draggable
      icon=options.icon
      label=options.label
      optimized=options.opacity
      optimized=options.optimized
      shape=options.shape
      title=options.title
      visible=options.visible
      zIndex=options.zIndex
      animation_changed=(route-action "registerEvent" "animation_changed")
      click=(route-action "registerEvent" "click")
      clickable_changed=(route-action "registerEvent" "clickable_changed")
      cursor_changed=(route-action "registerEvent" "cursor_changed")
      dblclick=(route-action "registerEvent" "dblclick")
      drag=(pipe (route-action "drag") (route-action "registerEvent" "drag"))
      dragend=(route-action "registerEvent" "dragend")
      draggable_changed=(route-action "registerEvent" "draggable_changed")
      dragstart=(route-action "registerEvent" "dragstart")
      icon_changed=(route-action "registerEvent" "icon_changed")
      mousedown=(route-action "registerEvent" "mousedown")
      mouseout=(route-action "registerEvent" "mouseout")
      mouseover=(route-action "registerEvent" "mouseover")
      mouseup=(pipe (route-action "mouseup") (route-action "registerEvent" "mouseup"))
      position_changed=(route-action "registerEvent" "position_changed")
      rightclick=(route-action "registerEvent" "rightclick")
      shape_changed=(route-action "registerEvent" "shape_changed")
      title_changed=(route-action "registerEvent" "title_changed")
      visible_changed=(route-action "registerEvent" "visible_changed")
      zindex_changed=(route-action "registerEvent" "zindex_changed")}}

  {{/g-map}}
</div>

<h3 class="grid-content -npl">Active Events</h3>

<div id="g-map-marker-event-states" class="grid-block -pb">
  <div class="grid-content small-12 medium-4 -smb">
    <div class="gmaps-fade-text {{if isanimation_changed '-fade'}}" data-test-updated={{if wasanimation_changed 'animation_changed'}}>animation_changed</div>
    <div class="gmaps-fade-text {{if isclick '-fade'}}" data-test-updated={{if wasclick 'click'}}>click</div>
    <div class="gmaps-fade-text {{if isclickable_changed '-fade'}}" data-test-updated={{if wasclickable_changed 'clickable_changed'}}>clickable_changed</div>
    <div class="gmaps-fade-text {{if iscursor_changed '-fade'}}" data-test-updated={{if wascursor_changed 'cursor_changed'}}>cursor_changed</div>
    <div class="gmaps-fade-text {{if isdblclick '-fade'}}" data-test-updated={{if wasdblclick 'dblclick'}}>dblclick</div>
    <div class="gmaps-fade-text {{if isdrag '-fade'}}" data-test-updated={{if wasdrag 'drag'}}>drag</div>
    <div class="gmaps-fade-text {{if isdragend '-fade'}}" data-test-updated={{if wasdragend 'dragend'}}>dragend</div>
  </div>

  <div class="grid-content small-12 medium-4 -smb">
    <div class="gmaps-fade-text {{if isdraggable_changed '-fade'}}" data-test-updated={{if wasdraggable_changed 'draggable_changed'}}>draggable_changed</div>
    <div class="gmaps-fade-text {{if isdragstart '-fade'}}" data-test-updated={{if wasdragstart 'dragstart'}}>dragstart</div>
    <div class="gmaps-fade-text {{if isicon_changed '-fade'}}" data-test-updated={{if wasicon_changed 'icon_changed'}}>icon_changed</div>
    <div class="gmaps-fade-text {{if ismousedown '-fade'}}" data-test-updated={{if wasmousedown 'mousedown'}}>mousedown</div>
    <div class="gmaps-fade-text {{if ismouseout '-fade'}}" data-test-updated={{if wasmouseout 'mouseout'}}>mouseout</div>
    <div class="gmaps-fade-text {{if ismouseover '-fade'}}" data-test-updated={{if wasmouseover 'mouseover'}}>mouseover</div>
    <div class="gmaps-fade-text {{if ismouseup '-fade'}}" data-test-updated={{if wasmouseup 'mouseup'}}>mouseup</div>
  </div>

  <div class="grid-content small-12 medium-4 -smb">
    <div class="gmaps-fade-text {{if isposition_changed '-fade'}}" data-test-updated={{if wasposition_changed 'position_changed'}}>position_changed</div>
    <div class="gmaps-fade-text {{if isrightclick '-fade'}}" data-test-updated={{if wasrightclick 'rightclick'}}>rightclick</div>
    <div class="gmaps-fade-text {{if isshape_changed '-fade'}}" data-test-updated={{if wasshape_changed 'shape_changed'}}>shape_changed</div>
