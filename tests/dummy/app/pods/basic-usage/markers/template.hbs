</div>

<div class="grid-block -lmb">
  <div class="grid-content small-6 medium-3 -mb">
    <small class="-db -smb">clickable</small>
    <button
      class="th-google-button--xsmall -ilb"
      data-test-update="clickable"
      {{action (route-action "toggleOption" "clickable")}}>{{if options.clickable 'Enabled' 'Disabled'}}</button>
  </div>

  <div class="grid-content small-6 medium-3 -mb">
    <small class="-db -smb">crossOnDrag</small>
    <button
      class="th-google-button--xsmall -ilb"
      data-test-update="crossOnDrag"
      {{action (route-action "toggleOption" "crossOnDrag")}}>{{if options.crossOnDrag 'Enabled' 'Disabled'}}</button>
  </div>

  <div class="grid-content small-6 medium-3 -mb">
    <small class="-db -smb">cursor</small>
    <button
      class="th-google-button--xsmall -ilb"
      data-test-update="cursor"
      {{action "setToNext" "cursor" "cursor"}}>{{options.cursor}}</button>
  </div>

  <div class="grid-content small-6 medium-3 -mb">
    <small class="-db -smb">draggable</small>
    <button
      class="th-google-button--xsmall -ilb"
      data-test-update="draggable"
      {{action (route-action "toggleOption" "draggable")}}>{{if options.draggable 'Enabled' 'Disabled'}}</button>
  </div>

  <div class="grid-content small-6 medium-3 -smb">
    <small class="-db -smb">icon</small>
    <button
      class="th-google-button--xsmall -ilb"
      data-test-update="icon"
      {{action (route-action "toggleCustomMarker")}}>{{if options.icon 'Custom' 'Normal'}}</button>
  </div>

  <div class="grid-content small-6 medium-3 -smb">
    <small class="-db -smb">label</small>
    <button
      class="th-google-button--xsmall -ilb"
      data-test-update="label"
      {{action (route-action "toggleLabel")}}>{{if options.label 'Text' 'None'}}</button>
  </div>

  <div class="grid-content small-6 medium-3 -smb">
    <small class="-db -smb">lat</small>
    <div class="th-google-button-bar">
      <button
        class="th-google-button--xsmall -fz-large -np"
        {{action (pipe (route-action "decrement" "lat") (route-action "syncMapCenter"))}}
        data-test-update="opacity"
        disabled={{lte (dec options.lat) 15}}>-</button>
      <button data-test-value="position.lat" class="th-google-button--xsmall">{{slice options.lat 0 7}}</button>
      <button
        class="th-google-button--xsmall -fz-large -np"
        {{action (pipe (route-action "increment" "lat") (route-action "syncMapCenter"))}}
        disabled={{gte (inc options.lat) 40}}>+</button>
    </div>
  </div>

  <div class="grid-content small-6 medium-3 -smb">
    <small class="-db -smb">lng</small>
    <div class="th-google-button-bar">
      <button
        class="th-google-button--xsmall -fz-large -np"
        {{action (pipe (route-action "decrement" "lng") (route-action "syncMapCenter"))}}
        data-test-update="opacity"
        disabled={{lte (dec options.lng) -115}}>-</button>
      <button data-test-value="position.lng" class="th-google-button--xsmall">{{slice options.lng 0 7}}</button>
      <button
        class="th-google-button--xsmall -fz-large -np"
        {{action (pipe (route-action "increment" "lng") (route-action "syncMapCenter"))}}
        disabled={{gte (inc options.lng) -80}}>+</button>
    </div>
  </div>

  <div class="grid-content small-6 medium-3 -smb">
    <small class="-db -smb">opacity</small>
    <div class="th-google-button-bar">
      <button
        class="th-google-button--xsmall -fz-large -np"
        {{action (route-action "decrement" "opacity" 0.1)}}
        data-test-update="opacity"
        disabled={{lte options.opacity 0.1}}>-</button>
      <button data-test-value="opacity" class="th-google-button--xsmall">{{slice options.opacity 0 4}}</button>
      <button
        class="th-google-button--xsmall -fz-large -np"
        {{action (route-action "increment" "opacity" 0.1)}}
        disabled={{gte options.opacity 0.99}}>+</button>
    </div>
  </div>

  <div class="grid-content small-6 medium-3 -mb">
    <small class="-db -smb">optimized</small>
    <button
      class="th-google-button--xsmall -ilb"
      data-test-update="optimized"
      {{action (route-action "toggleOption" "optimized")}}>{{if options.optimized 'Enabled' 'Disabled'}}</button>
  </div>

  <div class="grid-content small-6 medium-3 -smb">
    <small class="-db -smb">title</small>
    <button
      class="th-google-button--xsmall -ilb"
      data-test-update="title"
      {{action (route-action "toggleTitle")}}>{{if options.title 'Rollover' 'None'}}</button>
  </div>

  <div class="grid-content small-6 medium-3 -mb">
    <small class="-db -smb">visible</small>
    <button
      class="th-google-button--xsmall -ilb"
      data-test-update="visible"
      {{action (route-action "toggleOption" "visible")}}>{{if options.visible 'Enabled' 'Disabled'}}</button>
  </div>

  <div class="grid-content small-6 medium-3 -smb">
    <small class="-db -smb">zIndex</small>
    <div class="th-google-button-bar">
      <button
        class="th-google-button--xsmall -fz-large -np"
        {{action (route-action "decrement" "zIndex")}}
        data-test-update="zIndex"
        disabled={{eq options.zIndex 0}}>-</button>
      <button data-test-value="zIndex" class="th-google-button--xsmall">{{options.zIndex}}</button>
      <button
        class="th-google-button--xsmall -fz-large -np"
        {{action (route-action "increment" "zIndex")}}
        disabled={{gte options.zIndex 100}}>+</button>
    </div>
  </div>
</div>

<div class="grid-block">
  <div class="grid-content shrink -pb" style="min-height: 59px;">
    <small class="-db -smb">animation</small>
    <div class="th-google-button-bar">
      {{#each animations as |animation|}}
        <button class="th-google-button--small
          {{if (eq animation options.animation) 'active'}}"
          {{action "setAnimation" animation}}
          data-test-update="animation">
          {{animation}}
        </button>
      {{/each}}

      <button class="th-google-button--small
        {{if (not options.animation) 'active'}}"
        {{action "setAnimation" false}}
        data-test-update="animation">
        None
      </button>
    </div>
  </div>
</div>

<div class="grid-block">
  <div class="grid-content shrink -pb" style="min-height: 59px;">
    <small class="-db -smb">shape</small>
    <div class="th-google-button-bar">
      {{#each (array 'circle' 'poly' 'rect') as |type|}}
        <button class="th-google-button--small
          {{if (eq type options.shape.type) 'active'}}"
          {{action "setShapeType" type}}
          data-test-update="shape.type">
          {{type}}
        </button>
      {{/each}}

      <button class="th-google-button--small
        {{if (not options.shape) 'active'}}"
        {{action "setShapeType" false}}>
        None
      </button>
    </div>
  </div>
</div>

